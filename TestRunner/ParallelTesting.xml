<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">
<suite parallel="tests" name="Suite">
<listeners>
      <listener class-name="com.framework.listners.TestListner"></listener>
</listeners>

  <test thread-count="5" parallel="tests" name="ChromeTest">
     <parameter name="browser" value="chrome"></parameter>
     <groups>
     <run>
     <include name="Smoke"></include>
     </run>
     </groups>
    <classes>
      <class name="com.app.test.ApplicationTest"/>
    </classes>
  </test> <!-- Test -->
  
  
  <test thread-count="5" parallel="tests" name="EdgeTest">
     <parameter name="browser" value="edge"></parameter>
     <groups>
     <run>
     <include name="Regression"></include>
     </run>
     </groups>
    <classes>
      <class name="com.app.test.ApplicationTest"/>
    </classes>
  </test> <!-- Test -->
  
  
  <test thread-count="5" parallel="tests" name="FirefoxTest">
     <parameter name="browser" value="firefox"></parameter>
     <groups>
     <run>
     <include name="Sanity"></include>
     </run>
     </groups>
    <classes>
      <class name="com.app.test.ApplicationTest"/>
    </classes>
  </test> <!-- Test -->
  
</suite> <!-- Suite -->
